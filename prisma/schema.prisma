// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model ScanReport {
  id                String   @id @default(cuid())
  shop              String   @unique
  totalImages       Int
  imagesWithAltText Int
  lastScan          DateTime @default(now())
}

model Job {
  id          String    @id @default(cuid())
  shop        String
  status      JobStatus @default(waiting)
  createdAt   DateTime  @default(now())
  processedOn DateTime?
  finishedOn  DateTime?

  generatedAltTexts GeneratedAltText[]
}

// ! NOTE: This should be-matching bullmq's job state types.
// ! This must be updated whenever bullmq updates job state values
enum JobStatus {
  unknown
  waiting
  waitingChildren
  active
  delayed
  prioritized
  completed
  failed
}

model GeneratedAltText {
  id      String @id @default(cuid())
  imageId String
  altText String

  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId String
}
